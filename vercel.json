{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "env": {
    "BOT_TOKEN": "@bot-token", // Use Vercel Secrets for BOT_TOKEN
    "BOT_USERNAME": "vercelxtestingbot",
    "EMOJI_LIST": "😀😃😄😁😆",
    "RANDOM_LEVEL": "5",
    "RESTRICTED_CHATS": "[\"1234567890\", \"0987654321\"]"
  }
}